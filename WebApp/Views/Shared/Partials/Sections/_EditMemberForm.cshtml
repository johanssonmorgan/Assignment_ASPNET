@model EditMemberModalViewModel

<div id="editMemberModal" class="modal">
    <div class="modal-content">

        <div class="modal-header">
            <h3>Edit Member</h3>
            <button type="button" class="btn-close" data-close="true"></button>
        </div>

        <form novalidate method="post" asp-action="Edit" asp-controller="Members">
            <input asp-for="Id" readonly type="hidden" />
            <input asp-for="Email" readonly type="hidden" />

            <div class="image-previewer circle">
                <img src="" class="image-preview" />
                <input asp-for="MemberImage" accept="image/*" class="hide" />
            </div>
            <div class="form-flex">
                <div class="form-group">
                    <label asp-for="FirstName"></label>
                    <div class="field-group">
                        <input asp-for="FirstName" />
                        <span asp-validation-for="FirstName"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="LastName"></label>
                    <div class="field-group">
                        <input asp-for="LastName" />
                        <span asp-validation-for="LastName"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <div class="field-group">
                    <input asp-for="PhoneNumber" />
                    <span asp-validation-for="PhoneNumber"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="JobTitle"></label>
                <div class="field-group">
                    <input asp-for="JobTitle" />
                    <span asp-validation-for="JobTitle"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="form-label" asp-for="RoleName"></label>
                <div class="form-select" data-placeholder="Choose a role">
                    <button type="button" class="form-select-trigger">
                        <span class="form-select-text"></span>
                    </button>
                    <ul class="form-select-options">
                        @foreach (var role in Model.Roles!)
                        {
                            <li class="form-select-option" data-value="@role.Name">@role.Name</li>
                        }
                    </ul>
                    <input asp-for="RoleName" type="hidden" />
                </div>
            </div>

            <button type="submit" class="btn btn-submit btn-blue">Save</button>
        </form>
    </div>
</div>