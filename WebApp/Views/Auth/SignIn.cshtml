@model SignInViewModel
@{
    Layout = "_CenterLayout";
    ViewData["Title"] = "Login";
}
<section id="signin">
    <h1>@ViewData["Title"]</h1>
    <form asp-controller="Auth" asp-action="SignIn" method="post" novalidate enctype="multipart/form-data">

        <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl"/>

        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert-notification error">
                @ViewBag.ErrorMessage
            </div>
        }
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" />
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-blue btm-submit">Log In</button>
        </div>
        <div class="form-footer">
            <span>Don't have an account?</span>
            <a asp-controller="Auth" asp-action="SignUp"> Sign Up</a>
        </div>
    </form>
    <div class="divider">
        <div class="divider-line"></div>
        <span>OR</span>
        <div class="divider-line"></div>
    </div>
    @await Html.PartialAsync("Partials/Sections/_ExternalAuthentication")
</section>